<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="clearfix">
        <h1 class="float-start display-3 me-4">Forgot ?</h1>
        <h4 class="pt-3">Oops! You're lost your password.</h4>
        <p class="text-medium-emphasis">Input your email to reset password</p>
      </div>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div class="input-group">
          <span class="input-group-text">
            <%= svg_icon('free.svg#cil-envelope-open', %w[icon]) %>
          </span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'joe@hotmail.com', class: "form-control", size: 16 %>
          <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
