<% content_for :head do %>
  <%= append_javascript_pack_tag 'stimulus' %>
<% end %>

<div class="row justify-content-center">
  <div class="col-lg-12">
    <div class="container">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="row">
          <div class="col-md-4">
            <h5>
              <%= t(".section.email.title") %>
            </h5>
            <p class="text-medium-emphasis">
              <%= t(".section.email.description") %>
            </p>
          </div>
          <div class="col-md-8">
              <div class="form-group text-left">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <h5>
              <%= t(".section.password.title") %>
            </h5>
            <p class="text-medium-emphasis">
              <%= t(".section.password.description") %>
            </p>
          </div>
          <div class="col-md-8">
              <div class="form-group text-left">
                <%= f.label :password %>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              </div>
              <% if @minimum_password_length %>
                <em><%= @minimum_password_length %> characters minimum</em>
              <% end %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <h5>
              <%= t(".section.password_confirmation.title") %>
            </h5>
            <p class="text-medium-emphasis">
              <%= t(".section.password_confirmation.description") %>
            </p>
          </div>
          <div class="col-md-8">
              <div class="form-group text-left">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <h5>
              <%= t(".section.current_password.title") %>
            </h5>
            <p class="text-medium-emphasis">
              <%= t(".section.current_password.description") %>
            </p>
          </div>
          <div class="col-md-8">
              <div class="form-group text-left">
                <%= f.label :current_password %>
                <%= f.password_field :current_password, autocomplete: "new-password", class: "form-control" %>
              </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4 offset-md-4">
              <%= f.submit t("form.update"), class: "btn btn-block btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
