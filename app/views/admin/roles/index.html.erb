<% content_for :head do %>
  <%= append_javascript_pack_tag 'stimulus' %>
<% end %>

<%- content_for :action_bar do %>
  <ol>
    <li class="action_bar-item">
      <%= link_to t("form.new"), new_admin_role_path, class: "btn text-primary", data: {controller: "modal", action: "modal#click"} -%>
    </li>
  </ol>
<% end %>

<div class="row justify-content-center">
  <div class="col-lg-12">
    <div class="container">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th><%= t('.role_name') -%></th>
            <th><%= t('.status') -%></th>
            <th><%= t('form.action') -%></th>
          </tr>
        </thead>
        <tbody>
          <% @roles.each do |role| %>
            <tr>
              <td><%= role.role_name -%></td>
              <td></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>
