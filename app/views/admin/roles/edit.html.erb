<div class="modal-dialog">
  <div class="modal-content">
    <%= form_with model: @role, url: admin_role_path(id: @role.id), method: :patch do |f| %>
      <div class="modal-header">
        <h5 class="modal-title"><%= t(".title", role_name: @role.role_name) -%></h5>
        <button class="btn-close" type="button" data-coreui-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="row mb-2">
            <%= f.label :role_name, t("admin.roles.index.role_name"), class: 'col-3 col-form-label' %>
            <div class="col-9">
              <%= f.text_field :role_name, class: 'form-control' -%>
            </div>
          </div>
          <div class="row mb-2" data-controller="selectize-user-ids">
            <%= f.label :user_ids, t("user.users"), class: 'col-3 col-form-label' %>
            <div class="col-9">
              <%= f.select :user_ids, options_from_collection_for_select(User.where(id: @role.user_ids), "id", "email", @role.user_ids), {multiple: true}, class: 'form-control', id: 'user-ids-select' -%>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit t('form.update'), class: 'btn btn-primary', data: {'coreui-dismiss': :modal} %>
        <button class="btn btn-secondary" type="button" data-coreui-dismiss="modal"><%= t("form.close") -%></button>
      </div>
    <% end %>
  </div>
</div>
