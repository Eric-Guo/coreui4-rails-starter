<% content_for :head do %>
  <%= append_stylesheet_pack_tag 'datatables' %>
  <%= append_javascript_pack_tag 'stimulus' %>
  <%= append_javascript_pack_tag 'datatables' %>
<% end %>

<div class="row justify-content-center">
  <div class="col-lg-12">
    <div class="container">
      <table class="table table-striped table-bordered datatable" data-controller="datatables" data-datatables-target="datatable" data-source="<%= admin_users_path(format: :json) %>" data-datatables-dt-url-value="<%= asset_path('dt_zh-CN.json') -%>">
        <thead>
          <tr>
            <th><%= t('user.email') %></th>
            <th><%= t('user.preferred_language') %></th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>
