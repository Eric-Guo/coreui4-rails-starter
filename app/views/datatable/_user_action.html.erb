<div class="d-flex flex-row align-items-center flex-wrap">
  <% if policy(user).sign_in_as? %>
    <%= button_to(I18n.t("user.sign_in"), sign_in_as_admin_user_path(id: user.id), class: "btn btn-primary btn-sm") -%>
  <% end %>
  <%= link_to edit_admin_user_path(id: user.id), class: 'px-2', data: {controller: "modal", action: "modal#click"} do %>
    <%= svg_icon('free.svg#cil-pen', %w[icon icon-lg pt-1]) %>
  <% end %>
</div>
